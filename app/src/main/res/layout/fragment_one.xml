<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="android 8 apk 安装权限测试"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他权限测试"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="launcher拉起后台慧享家"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="直接拉起后台慧享家"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="通过包名启动应用"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试1"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/test7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试1"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</ScrollView>